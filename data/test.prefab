#data/test.prefab
# A unique name for the prefab asset itself.
version: 1.0
name: "VenusPrefab"

dependencies:
  materials:
    - "assets/materials/default.mat" # Index 0

  meshes:
    - "assets/meshes/venus.obj" # Index 0

nodes:
  - name: "Venus"
    transform:
      translation: [ 0, 0, 0 ]
      orientation: [ 0, 0, 0, 1 ] # Identity quaternion
      scale: [ 1, 1, 1 ]
    mesh: 0       # Use mesh at index 0
    material: 0   # Use material at index 0
    hierarchy:
      parent: -1 # No parent, this is the root node
      children: [] # No children for now
scene:
  root: 0 # The root is the node at index 0 ("Venus")